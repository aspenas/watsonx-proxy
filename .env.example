# Watson Orchestrate Proxy Environment Variables
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit the .env file to git

# Required: IBM Watson API Key
# Get this from your IBM Cloud account
WATSONX_API_KEY=your-api-key-here

# Required: Watson Orchestrate Instance ID
# This is your Watson instance identifier
WATSONX_INSTANCE_ID=20251101-2338-1901-402d-f441a2b6b26b

# Optional: Server Port (default: 3000)
PORT=3000

# Optional: Node Environment (development/production)
NODE_ENV=development

# Optional: CORS Origins (comma-separated list, default: *)
# Example: CORS_ORIGINS=http://localhost:3000,https://tasklet.ai
CORS_ORIGINS=*

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Optional: Logging Level (debug/info/warn/error)
LOG_LEVEL=info

# Optional: Token Refresh Buffer (seconds before expiry to refresh)
TOKEN_REFRESH_BUFFER=300

# Optional: Request Timeout (milliseconds)
REQUEST_TIMEOUT=30000

# Optional: Health Check Interval (milliseconds)
HEALTH_CHECK_INTERVAL=60000
